<form action="/users/{{id}}/newVehicle" method="post">
	<b>Brand: </b><input type="text" name="brand" size="20"><br>
    <b>Model: </b><input type="text" name="model" size="20"><br>
    <b>Year: </b><input type="text" name="year" size="4"><br>
    <b>Color: </b><input type="text" name="color" size="10"><br>
	<b>Seleccione un tipo: </b><select name="type" onchange="toggle_vehicleType(this)">
